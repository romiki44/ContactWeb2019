@model ContactWeb2019.Models.Contact

@{
    ViewBag.Title = "Delete";
}
<br />
<h2>Delete Contact - @Model.FullName?</h2>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.FullName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FullName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PhonePrimary)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PhonePrimary)
        </dd>

        @if (!string.IsNullOrEmpty(Model.PhoneSecondary))
        {
            <dt>
                @Html.DisplayNameFor(model => model.PhoneSecondary)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.PhoneSecondary)
            </dd>
        }

        @if (Model.Birtday != null)
        {
            <dt>
                @Html.DisplayNameFor(model => model.Birtday)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Birtday)
            </dd>
        }

        <dt>
            @Html.DisplayNameFor(model => model.FullAddress)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FullAddress)
        </dd>
    </dl>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
